@model ATM_Banking_System.Models.loginUser
@{
}
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <form action="/Home/loginUser" method="POST">
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input type="number" class="form-control" placeholder="Account Number" required asp-for="AccNo" />
            </div>
            <div class="form-group">

                <input type="password" class="form-control" placeholder="PIN" required asp-for="PIN" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>

        </form>
        <p class="text-center"><a href="/Home/registerUser">Register as New User</a></p>
    </div>
</body>
</html>
